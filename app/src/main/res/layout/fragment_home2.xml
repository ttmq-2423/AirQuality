<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#A6D7E7"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/Location"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/acme"
        android:text="Location"
        android:layout_marginStart="10dp"
        android:textColor="@color/UioT_color"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/as"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/acme"
        android:layout_below="@id/Location"
        android:text="UiOT"
        android:textColor="@color/UioT_color"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:id="@+id/newGroup"
        android:layout_width="198dp"
        android:layout_height="221dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/Location"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_group"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/firstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/acme"
            android:text="Temperature"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/newImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/firstTextView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/temp_removebg_preview" />

        <TextView
            android:id="@+id/tv_Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="Second Text"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/newGroup2"
        android:layout_width="198dp"
        android:layout_height="221dp"
        android:layout_below="@id/Location"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_group"
        android:layout_marginEnd="8dp">


        <TextView
            android:id="@+id/firstTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/acme"
            android:layout_marginTop="5dp"
            android:text="Rainfall"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/newImageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/firstTextView2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rain_removebg_preview" />

        <TextView
            android:id="@+id/tv_Rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newImageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="Second Text"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/newGroup3"
        android:layout_width="198dp"
        android:layout_height="221dp"
        android:layout_below="@id/newGroup"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_group"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp">


        <TextView
            android:id="@+id/firstTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/acme"
            android:text="WindSpeed"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/newImageView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/firstTextView3"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wind_removebg_preview" />

        <TextView
            android:id="@+id/tv_Wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newImageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="Second Text"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/newGroup4"
        android:layout_width="198dp"
        android:layout_height="221dp"
        android:layout_below="@id/newGroup"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_group"
        android:layout_marginEnd="20dp">


        <TextView
            android:id="@+id/firstTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/acme"
            android:text="Humidity"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/newImageView4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/firstTextView4"
            android:layout_centerHorizontal="true"
            android:src="@drawable/humidity" />

        <TextView
            android:id="@+id/tv_Hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newImageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="Second Text"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>

